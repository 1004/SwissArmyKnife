<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="您可以通过如下命令开启、关闭sak"
        android:textColor="#333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="adb shell am broadcast -a com.sak"
        android:textColor="#000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动install"
            android:textAllCaps="false"
            android:textColor="#000" />

        <Button
            android:id="@+id/uninstall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动un install"
            android:textAllCaps="false"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog Act"
            android:textAllCaps="false"
            android:textColor="#000" />

        <Button
            android:id="@+id/openAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new Act"
            android:textAllCaps="false"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/userDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user dialog"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popupwindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="popupwindow"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/userWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user window"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user toast"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/reLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新布局"
            android:textAllCaps="false" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_selector"
        android:clickable="true"
        android:padding="10dp"
        android:text="state color"
        android:textColor="@drawable/color_selector" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6f00ff"
        android:clickable="true"
        android:padding="10dp"
        android:text="state color"
        android:textColor="@drawable/color_selector" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>